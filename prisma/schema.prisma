generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    email     String    @unique
    password  String
    role      Role      @default(AGENT)
    sessions  Session[]
}

model Session {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    userId    String
    token     String   @unique
    user      User     @relation(fields: [userId], references: [id])
}

enum Role {
    AGENT
    ADMIN
}
